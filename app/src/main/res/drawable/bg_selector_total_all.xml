<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"  android:color="@color/holo_red_dark">
        <shape android:shape="rectangle">
            <solid android:color="@color/title_bg_dark" />
            <corners android:radius="2dp" />
            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>
    <item android:state_pressed="false" android:state_enabled="true" android:color="@color/white">
        <shape android:shape="rectangle">
            <solid android:color="@color/title_bg" />
            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

    <item android:state_enabled="false" android:color="@color/white">
        <shape android:shape="rectangle">
            <solid android:color="@color/darker_gray" />
            <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
            <corners android:radius="2dp" />
            <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
        </shape>
    </item>

    <item android:color="@android:color/white">
       <shape android:shape="rectangle">
           <solid android:color="@color/title_bg" />
           <padding android:bottom="2dp" android:left="5dp" android:right="5dp" android:top="2dp" />
           <corners android:radius="2dp" />
           <stroke android:width="1dp" android:color="@color/colorPrimaryDark" />
       </shape>

   </item>
</selector>

